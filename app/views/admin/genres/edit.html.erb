<h1>ジャンル編集</h1>

<%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
  <div class="form-group">
    <%= f.label :genre_name, "ジャンル名" %>
    <%= f.text_field :genre_name, class:"form-control", placeholder: "genre_name" %>
    <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
  </div>
<% end %>
<%= link_to "削除", admin_genre_path(@genre.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
