<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 ml-5">
      <h4>ジャンル編集</h4>

      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
        <div class="form-group mt-3 ml-3">
          <%= f.label :genre_name, "ジャンル名" %><br>
          <%= f.text_field :genre_name, class:"col-6", placeholder: "genre_name" %>
        </div>
        <div class="form-action">
          <%= f.submit "変更を保存", class: 'btn btn-success col-md-3 offset-7' %>
        </div>
      <% end %>
    </div>
  </div>
</div>