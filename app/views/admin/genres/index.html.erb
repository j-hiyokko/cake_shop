<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h3>ジャンル一覧・追加</h3>
      <div class="form-group">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <%= f.label :genre_name, "ジャンル名" %>
          <%= f.text_field :genre_name, class:"form-control", placeholder:"ジャンル名" %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-5">

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
            <td><%= link_to edit_admin_genre_path(genre.id), class: 'btn btn-success' do %>
            編集する
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
