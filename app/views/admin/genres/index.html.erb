<div class="container py-4">
  <div class="row">
    <div class="col-md-6">

      <h4>ジャンル一覧・追加</h4>

        <%= form_with model: @genre, url: admin_genres_path do |f| %>

        <div class="form-group mt-3">
          <%= f.label :genre_name, "ジャンル名" %>
          <%= f.text_field :genre_name, class:"col-6 offset-1", placeholder:"ジャンル名" %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-7 ml-3">

      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %>
              <%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>
