<div class="container px-5 py-4">
  <div class="row align-items-center">
    <div class="col-3">
      <h4>注文履歴一覧</h4></div>
    </div>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th class="table-secondary">購入日時</th>
          <th class="table-secondary">購入者</th>
          <th class="table-secondary">注文個数</th>
          <th class="table-secondary">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
           <%= link_to admin_order_path(order.id), class: 'btn btn-default' do %>
             <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
           <% end %>
          </td>
          <td> <%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td><%= order.order_details.sum(:order_quantity) %></td>
          <td><%= order.order_status_i18n %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>