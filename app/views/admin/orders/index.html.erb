<h3>注文履歴一覧</h3>
<table class='table'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
     <% @orders.each do |order| %>
    <tr>
      <th>
        <%= link_to admin_orders_path, class: 'btn btn-default' do %>
          <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </th>
      <th> <%= order.customer.last_name %><%= order.customer.first_name %></th>
      <th><%= order.order_details.sum(:order_quantity) %></th>
      <th><%= order.order_status %></th>
      <th></th>
    <% end %>
    </tr>
  </tbody>
</table>