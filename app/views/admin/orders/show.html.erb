<div class="container">
  <div class="row">
    <div class="col-lg-9" >
      <h2>注文履歴詳細</h2>
        <table>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
         </tr>
        <tr>
          <th>注文日</th>
          <td> <%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postcode %><%= @order.address %><br>
              <%= @order.address_name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
         <td><%= form_with(model: @order, url: admin_order_path, local: true, class: "form-row") do |f| %>
            <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6"  %>
            <%= f.submit "更新" %>
　　        <% end %>
　　      </td>
        </tr>
      </table>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.order_quantity %></td>
              <td><%= order_detail.price*order.order_quantity %></td>
              <%= form_with model: order_detail, url: admin_order_detaile(order_detail), local: true do |f| %>
                <td><%= f.select :product_status, OrderDetail.product_statuses_i18n.invert, {prompt: false} %></td>
                <td><%= f.submit "更新", class: "btn btn-success" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-3" >
      <div class=".position-absolute.bottom-0.end-0">
        <h4>送料<%= @order.postage %>円</h4>
        <h4>請求金額<%= @order.billing_amount %>円</h4>
      </div>
    </div>
  </div>

















