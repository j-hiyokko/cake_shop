<div class='container py-4'>

  <div class='row offset-1'>
    <h4 class="bg-light">商品編集</h4>
  </div>

  <div class="row mt-4 justify-content-center">
    <%= form_with model:@item,url:admin_item_path(@item.id) do |f| %>
      <div class="form-group row">
        <%= f.label:商品画像,class:"col-4" %>
        <%= f.file_field:item_image,accept:"image/*",class:"btn col-8" %>
      </div>
      <div class="form-group row">
        <%= f.label:商品名,class:"col-4" %>
        <%= f.text_field :item_name,placeholder:"商品名",class:'form-control col-8' %>
      </div>
      <div class="form-group row h-50">
        <%= f.label:商品説明,class:"col-4" %>
        <%= f.text_area :introduction,placeholder:"ここに説明文を記述します",class:'form-control col-8' %>
      </div>
      <div class="form-group row">
        <%= f.label:ジャンル,class:"col-4" %>
        <%= f.collection_select :genre_id,@genre,:id,:genre_name,include_blank:"--選択してください--",class:"col-8" %>
      </div>
      <div class="form-group row">
        <%= f.label:価格,class:"col-4" %>
        <%= f.number_field :price,placeholder:"1000",class: 'form-control col-7' %>円
      </div>
        <div class="form-group row">
          <%= f.label:販売ステータス,class:"col-4" %>
          <radio>
            <%= f.collection_radio_buttons :item_status,Item.item_statuses_i18n,:first,:last,class: 'form-control' %>
          </radio>
        </div>
        <div class="form-group text-center">
          <%= f.submit :'変更を保存',class: 'btn btn-success'%>
        </div>
      <% end %>
    </div>

</div>
