 <div class='container px-5 py-5'>
    <div class='row'>

        <div class='col-md-4'>
            <h2>商品詳細</h2>
            <%= image_tag @item.get_item_image,size: "300x250" %>
        </div>

        <div class='col-md-6'>
            <p>商品名<%= @item.item_name %></p>
            <p>商品説明<%= @item.introduction %></p>
            <p>ジャンル<%= @item.genre.genre_name %></p>
            <p>税込価格<br>(税抜価格)
            <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</p>
            <p>販売ステータス</p>
            <% if @item.item_status == "available" %>
            <p class="text-success"><%= @item.item_status_i18n %></p>
            <% else %>
            <p class="text-black-50"><%= @item.item_status_i18n %></p>
            <% end %>
            <%= link_to "編集する",edit_admin_item_path %>
        </div>

    </div>
</div>
