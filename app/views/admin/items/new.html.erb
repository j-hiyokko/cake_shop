<div class='container py-4'>

  <div class='row offset-1'>
    <h4 class="bg-light">商品新規登録</h4>
  </div>

  <div class="row mt-4 justify-content-center">
    <%= form_with model:@item,url:admin_items_path,method: :post do |f| %>
      <div class="form-group row">
        <%= f.label:商品画像,class:"col-4" %>
        <%= f.file_field:item_image,accept:"image/*",class:"btn col-8" %>
      </div>
      <div class="form-group row">
        <%= f.label:商品名,class:"col-4" %>
        <%= f.text_field :item_name,placeholder:"商品名",class: 'form-control col-8' %>
      </div>
      <div class="form-group row  h-50">
        <%= f.label:商品説明,class:"col-4" %>
        <%= f.text_area :introduction,placeholder:"ここに説明文を記述します",class: 'form-control col-8' %>
      </div>
      <div class="form-group row">
        <%= f.label:ジャンル,class:"col-4" %>
        <%= f.collection_select :genre_id,@genre,:id,:genre_name,prompt:"--選択してください--",class: 'form-control col-8' %>
      </div>
      <div class="form-group row">
        <%= f.label:価格,class:"col-4" %>
        <%= f.number_field :price,placeholder:"1000",class: 'form-control col-7' %>円
      </div>
      <div class="form-group row">
        <%= f.label:販売ステータス,class:"col-4"%>
        <radio>
          <%= f.collection_radio_buttons :item_status,Item.item_statuses_i18n,:first,:last,class: 'form-control col-8' %>
        </radio>
      </div>
      <div class="text-center">
        <%= f.submit :'新規登録',class: 'btn btn-success col-3'%>
      </div>
    <% end %>
  </div>

</div>
