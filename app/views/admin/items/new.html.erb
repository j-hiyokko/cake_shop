<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2 class="bg-light">商品新規登録</h2>
        <%= link_to '商品一覧',admin_items_path %>

        <%= form_with model:@item,url:admin_items_path do |f| %>
          <div class="form-group">
            <%= f.label:商品画像%>
            <%= f.file_field:item_image,accept:"image/*" %>
          </div>
          <div class="form-group">
            <%= f.label:商品名%>
            <%= f.text_field :item_name,placeholder:"商品名",class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label:商品説明%>
            <%= f.text_area :introduction,placeholder:"ここに説明文を記述します",class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label:ジャンル %>
            <%= f.collection_select :genre_id,@genre,:id,:genre_name,prompt:"--選択してください--",class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label:価格%>
            <%= f.number_field :price,placeholder:"1000",class: 'form-control' %>円
          </div>
          <div class="form-group">
            <%= f.label:販売ステータス%>
            <%= f.radio_button :item_status, :販売中,class: 'form-control' %>
            <%= f.label:販売中%>
            <%= f.radio_button :item_status, :販売停止中,class: 'form-control' %>
            <%= f.label:販売停止中%>
          </div>
          <div class="form-group">
            <%= f.submit :'新規登録',class: 'btn btn-success'%>
          </div>
        <% end %>

    </div>
  </div>
</div>
