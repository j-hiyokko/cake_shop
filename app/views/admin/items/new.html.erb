<h2>admin/items#new</h2>

  <h2>商品新規登録ページ</h2>

    <%= form_with model:@item,url:admin_items_path do |f| %>

      <div class="form-group">
        <%= f.label:商品画像%>
        <%= f.file_field:item_image,accept:"image/*"%>
      </div>
      <div class="form-group">
        <%= f.label:商品名%>
        <%= f.text_field :item_name,placeholder:"商品名" %>
      </div>
      <div class="form-group">
        <%= f.label:商品説明%>
        <%= f.text_area :introduction,placeholder:"ここに説明文を記述します" %>
      </div>
      <div class="form-group">
        <%= f.label:ジャンル %>
        <%= f.select :genre_id,[["ケーキ",1],["クッキー",2],["プリン",3],["キャンディ",4]],include_blank:"--選択してください--" %>
      </div>
      <div class="form-group">
        <%= f.label:価格%>
        <%= f.text_field :price,placeholder:"1000" %>円
      </div>
      <div class="form-group">
        <%= f.radio_button :item_status,'1' %>
        <%= f.label:販売中 %>
        <%= f.radio_button :item_status,'0' %>
        <%= f.label:販売停止中 %>
      </div>
      <div class="form-group">
        <%= f.submit :'新規登録'%>
      </div>
      <% end %>

      <%= link_to '商品一覧へ',admin_items_path %>