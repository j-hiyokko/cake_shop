<div class="container px-5">
    <div class="row">

        <h3>ショッピングカート</h3>
        <p id="notice"><%= notice %></p>
        <%= button_to "カートを空にする",destroy_all_cart_items_path,method: :delete,class:"btn btn-danger"%>

        <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td>
                        <%= image_tag cart_item.item.get_item_image,size: "100x60" %>
                        <%= cart_item.item.item_name %>
                    </td>
                    <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
                    <%= form_with model:cart_item do |f| %>
                    <td>
                        <%= f.select:quantity,*[1..10] %>
                        <%= f.submit "変更",class:"btn btn-sm btn-success" %>
                    </td>
                    <% end %>
                    <td><%= cart_item.subtotal.round.to_s(:delimited) %></td>
                    <td><%= button_to '削除する',cart_item_path(cart_item.id),method: :delete,class:"btn btn-sm btn-danger" %>
                </tr>
                <% end %>
            </tbody>
        </table>

        <p>合計金額</p>
        <%= @subtotal.round.to_s(:delimited) %>


        <%= link_to "買い物を続ける",root_path,class:"btn btn-primary" %>
        <% if @cart_items.blank? %>
        <%= link_to "情報入力に進む",new_order_path,class:"btn btn-success disabled " %>
        <% else %>
        <%= link_to "情報入力に進む",new_order_path,class:"btn btn-success" %>
        <% end %>

    </div>
</div>