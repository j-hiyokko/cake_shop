<div class="container px-5">
    <div class="row">

        <h3>ショッピングカート</h3>

        <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                    <th>商品名</th>
                    <th>単価(税込)</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @cart_items.each do |cart_item| %>
                <tr>
                    <td>
                        <%= image_tag cart_item.item.get_item_image,size: "100x60" %>
                        <%= cart_item.item.item_name %>
                    </td>
                    <td><%= cart_item.item.add_tax_price %></td>
                    <td><%= cart_item.quantity %></td>
                    <td><%= cart_item.subtotal %></td>
                    <td><%= link_to '削除する',cart_item_path(cart_item.id),method: :delete %>
                </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>