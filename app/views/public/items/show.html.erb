 <div class="container">
  <div class="row py-5">

    <div class='col-md-2'>
      <%= render  "public/items/sidebar", genres: @genres %>
    </div>

    <div class='col-9 offset-1'>
      <div class="row">

        <div class='col-6'>
          <%= image_tag @item.get_item_image,size: "400x350",class:"img-thumbnail" %>
        </div>

        <div class='col-6'>
          <h3><%= @item.item_name %></h3>
          <p class="mt-5"><%= @item.introduction %></p>
          <p class="mt-5"><span class="h4">¥<%= @item.add_tax_price.to_s(:delimited) %></span>(税込)</p>

          <% if @item.item_status == "available" %>
          <%= form_with model:@cart_items do |f| %>
          <%= f.hidden_field :item_id,:value => @item.id %>
          <%= f.select :quantity,*[1..10],default:1 %>
          <span class="ml-5"><%= f.submit :'カートに入れる',class:"btn btn-outline-info" %></span>
          <% end %>
          <% else %>
          <p class="mt-3">販売停止中</p>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
