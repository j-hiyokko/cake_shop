 <div class="container">
  <div class="row align-items-center">

    <div class='col-md-2'>
      <div class="card">
        <div class="card-body">
          <p class="card-title">ジャンル検索</p>
            <% @genres.each do |genre| %>
            <p class="card-text"><%= genre.genre_name %><br></p>
            <% end %>
        </div>
      </div>
    </div>

    <div class='col-md-4 offset-2 py-5'>
      <%= image_tag @item.get_item_image,size: "350x300",class:"img-thumbnail" %>
    </div>
    <div class='col-md-3'>
      <%= @item.item_name %><br>
      <%= @item.introduction %><br>
      ¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)

      <% if @item.item_status == "available" %>
        <%= form_with model:@cart_items do |f| %>
        <%= f.hidden_field :item_id,:value => @item.id %>
        <%= f.select :quantity,*[1..10],prompt:'個数選択' %>
        <%= f.submit :'カートに入れる',class:"btn btn-primary" %>
        <% end %>
      <% else %>
        <p>販売停止中</p>
      <% end %>

    </div>
