<h2>items#index</h2>

<div class="container">
  <div class="row">

    <h3>商品一覧(全<%= @items.count %>件)</h3>

      <% @items.each do |item| %>
      <div class="col-2">
        <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_item_image,size: "300x250",class:'img-fluid' %>
        <% end %>
        <%= item.item_name %>
        ¥<%= item.price %>
      </div>
      <% end %>
      <%= paginate @items %>

  </div>
</div>
