<div class="container px-5 px-sm-0">
  <div class="row">

    <div class='col-md-3'>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">ジャンル検索</h4>
            <% @genres.each do |genre| %>
            <p class="card-text">
            <%= genre.genre_name %><br>
            </p>
            <% end %>
        </div>
      </div>
    </div>

    <div class='col-md-9'>
      <h3>商品一覧</h3><p>(全<%= @allitems.count %>件)</p>

      <div class="row">
        <% @items.each do |item| %>
          <div class='col-md-3'>
            <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_item_image,size: "250x200",class:'img-fluid' %>
            <% end %><br>
            <%= item.item_name %><br>
            ¥<%= item.add_tax_price.to_s(:delimited) %>
          </div>
        <% end %>
        <div><%= paginate @items %></div>
      </div>
    </div>

  </div>
</div>
