<h2>注文情報確認</h2>
<div class="row">
    <div class="col-md-7">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_items| %>
          <tr>
            <th scope="row"><%= image_tag @item.get_item_image,size: "300x250" %><%= cart_items.item.item_name %></th>
            <td><%= cart_items.item.price %></td>
            <td><%= cart_items.quantity %></td>
            <td><%= cart_items.item.price * cart_items.quantiy.to_i %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
      <div class="col-md-5">
        <table class="table">
          <tbody>
            <tr>
              <td>送料</td>
              <td><%= @order.postage %></td>
            </tr>
            <tr>
            <td>商品合計</td>
              <td><%= @sum %></td>
            </tr>
            <tr>
              <td>請求合計</td>
              <td><%= @order.billing_amount %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>
<h3>支払方法<%= (@order.payment == 0) ? "クレジットカード" : "銀行振り込み" %></h3>
<h3>お届け先<%= @order.address %></h3>
<%= form_with model: @order, url: orders_path, method: :post do |f| %>
<!--create確認用-->
<%= f.hidden_field :customer_id %>
<%= f.hidden_field :postcode %>
<%= f.hidden_field :address %>
<%= f.hidden_field :address_name %>
<%= f.hidden_field :postage %>
<%= f.hidden_field :billing_amount, :value => @sum+800 %>
<%= f.hidden_field :payment %>
<%= f.submit "注文を確定する", class:"btn btn-success col-md-3" %>
<% end %>