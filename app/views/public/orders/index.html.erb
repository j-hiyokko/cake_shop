<div class="container">
  <div class="row">
    <div class="col">
      <h3>注文履歴一覧</h3>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">注文日</th>
          <th class="table-active">配送先</th>
          <th class="table-active">注文商品</th>
          <th class="table-active">支払い金額</th>
          <th class="table-active">ステータス</th>
          <th class="table-active">注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
              <td>
                〒<%= order.postcode %> <br>
                <%= order.address %> <br>
                <%= order.address_name %>
              </td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.item_name %><br />
                <% end %>
              </td>
              <td><%= (order.billing_amount).to_s(:delimited) %> 円</td>
              <td><%= order.order_status_i18n %></td>
              <td><%= link_to "表示する", order_path(order), class: "btn btn-outline-primary" %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>