<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-8">

    <h5>ログイン</h5>
    <p>会員の方はこちらからログイン</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control", placeholder:"sample@example.com",autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-primary' %>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-9">
      <h5>会員登録がお済でない方</h5>
      <%= link_to "こちら", new_customer_registration_path %> からログインしてください。
    </div>
  </div>
</div>