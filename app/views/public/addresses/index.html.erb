<div class="container mt-3">
  <div class="row">
    <div class="col-md-5">
      <h3>配送先登録/一覧</h3>
    </div>
  </div>

  <%= form_with model: @address, url: addresses_path do |f| %>
  <div class="form-group row mt-3">
    <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-3" %>
    <%= f.text_field :postcode, class: "col-md-2", placeholder:"0000000" %>
  </div>

  <div class="form-group row">
    <%= f.label :address, "住所", class: "col-3" %>
    <%= f.text_field :address, class: "col-md-5", placeholder:"東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="form-group row">
    <%= f.label :address_name, "宛名", class: "col-3" %>
    <%= f.text_field :address_name, class: "col-md-2", placeholder:"令和道子" %>
  </div>
  <div class="form-action row mt-3">
    <%= f.submit "新規登録", class: 'col-md-2 offset-6 btn btn-outline-success btn-sm' %>
  </div>
  <% end %>

  <div class="row mt-3">
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th scope="col">郵便番号</th>
        <th scope="col">住所</th>
        <th scope="col">宛名</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.address_name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-outline-success' %>
          <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-outline-danger' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>